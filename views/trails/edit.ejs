<% layout('layouts/boilerplate') %>

<h1>Edit Trail</h1>
<form action="/trails/<%= trail._id %>?_method=PUT" method="POST">
  <div>
    <label for="title">Title</label>
    <input
      type="text"
      id="title"
      name="trail[title]"
      value="<%= trail.title %>"
    />
  </div>
  <div>
    <label for="location">Location</label>
    <input
      type="text"
      id="location"
      name="trail[location]"
      value="<%= trail.location %>"
    />
  </div>
  <button>Update Trail</button>
</form>
<a href="/trails/<%= trail._id %>">Back To Trail</a>
