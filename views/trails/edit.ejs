<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Trail</h1>
  <div class="col-6 offset-3">
    <form action="/trails/<%=trail._id%>?_method=PUT" method="POST" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="trail[title]"
          value="<%=trail.title%>"
          required
          id="name"
        />
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="trail[location]"
          value="<%=trail.location%>"
          required
          id="location"
        />
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          name="trail[image]"
          value="<%=trail.image%>"
          required
          id="image"
        />
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          name="trail[description]"
          required
          id="description"
          style="height: 300px"
        >
              <%=trail.description%>
            </textarea
        >
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update Trail</button>
      </div>
    </form>
    <a href="/trails/<%= trail._id %>">Back To Trail</a>
  </div>
</div>
