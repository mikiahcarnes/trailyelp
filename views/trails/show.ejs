<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-6 offset-3">
    <div class="card mb-3">
      <img src="<%= trail.image %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%= trail.title %></h5>
        <p class="card-text"><%= trail.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= trail.location %></li>
      </ul>
      <div class="card-body">
        <a class="card-link btn btn-primary" href="/trails/<%=trail._id%>/edit"
          >Edit</a
        >
        <form
          class="d-inline"
          action="/trails/<%=trail._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <div class="card-footer text-muted">2 days ago</div>
    </div class="col-6">
    <h2>Leave a Review</h2>
    <form
      action="/trails/<%=trail._id%>/reviews"
      method="POST"
      class="mb-3 validated-form"
      novalidate
    ></form>
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input
          id="rating"
          class="form-range"
          min="1"
          max="5"
          type="range"
          name="review[rating]"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          rows="4"
          cols="30"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button class="btn btn-success">Add Review</button>
    </form>
    <% for(let review of trail.reviews) { %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Rating: <%= review.rating %></h5>
        <p class="card-text">Review: <%= review.body %></p>
        <form
          action="/trails/<%=trail._id%>/reviews/<%=review._id%>?_method=DELETE"
          method="post"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
    <% } %>
  </div>
</div>
